{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "client",
      "image": "nerdcore/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name": "server",
      "image": "nerdcore/multi-server",
      "hostname": "api",
      "essential": false
    },
    {
      "name": "worker",
      "image": "nerdcore/multi-worker",
      "essential": false
    },
    {
      "name": "nginx",
      "image": "nerdcore/multi-nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [ "client", "server" ]
    }
  ]

}
